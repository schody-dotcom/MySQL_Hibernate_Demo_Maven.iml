<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Filmy" table="filmy">
        <id name="movie_id" type="int" column="movie_id">
            <generator class="assigned"></generator>  <!-- automatyczna generacja klucza glownego -->
        </id>

        <property name="movie_name" column="movie_name"></property> <!-- mapowanie atrybutu z kolumna w bazie -->
        <property name="pegi" column="pegi"></property>
        <property name="release_d" column="release_d"></property>
        <property name="score" column="score"></property>


    </class>

</hibernate-mapping>

        <!-- mapping types
        https://www.tutorialspoint.com/hibernate/hibernate_mapping_types.htm
        -->
